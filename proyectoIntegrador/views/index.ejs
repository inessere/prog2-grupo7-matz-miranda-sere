<!-- Include Head -->

<body>
	
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headLogueado') %>
	 <% } else { %>
		<%- include('./partials/head') %>
	<% } %>
	<!-- Banner -->
	<div class="banner">
		<img src="images/bannerapple.jpg" alt="Banner de ofertas">
		
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 8; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%=data[i].id%>">
							<figure class="product-box_image">
								<img src=" /images/products/<%=data[i].fotoproducto %>" alt="<% %>" width="300" >
							</figure>
							<article class="product-box_data">
								<h2> <%= data[i].nombreProducto %> </h2>
								<p><%= data[i].descripcionProducto %></p>
								<p> Comentarios: <%=data[i].comentario.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 4; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%=data[i].id%>" >
							<figure class="product-box_image">
								<img src="/images/products/<%= data[i].fotoproducto %>" alt="<% %>" width="300" >
							</figure>
							<article class="product-box_data">
								<h2> <%= data[i].nombreProducto %> </h2>
								<p><%= data[i].descripcionProducto %></p>
								<p> Comentarios: <%=data[i].comentario.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>


	<footer>
		<%- include('./partials/footer') %>
	</footer>
	

	<!-- /footer -->
</body>	
</html>