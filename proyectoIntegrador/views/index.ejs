
<!-- Include Head -->
<%- include('./partials/head') %>
<body>

	<!-- Banner -->
	<div class="banner">
		<img src="images/bannerapple.jpg" alt="Banner de ofertas">
		
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 4; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/product">
							<figure class="product-box_image">
								<img src="<%= data.productos[i].fotoproducto %>" alt="<% %>" width="300" >
							</figure>
							<article class="product-box_data">
								<h2> <%= data.productos[i].nombreproducto %> </h2>
								<p><%= data.productos[i].descripcion %></p>
								<p> Comentarios: <%=data.productos[i].comentarios.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 4; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/product" >
							<figure class="product-box_image">
								<img src="<%= data.productos[i].fotoproducto %>" alt="<% %>" width="300" >
							</figure>
							<article class="product-box_data">
								<h2> <%= data.productos[i].nombreproducto %> </h2>
								<p><%= data.productos[i].descripcion %></p>
								<p> Comentarios: <%=data.productos[i].comentarios.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>


	<footer>
		<%- include('./partials/footer') %>
	</footer>
	

	<!-- /footer -->
</body>	
</html>