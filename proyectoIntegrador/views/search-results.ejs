<!-- Include Head -->
<body>
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headLogueado') %>
	 <% } else { %>
		<%- include('./partials/head') %>
	<% } %>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
		<!-- muestra los productos buscados -->
		<% if (data.length > 0) { %>
			<% for( let i = 0; i < data.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%=data[i].id%>">
							<figure class="product-box_image">
								<img src=" /images/products/<%=data[i].fotoproducto %>" alt="<% %>" width="300" >
							<article class="product-box_data">
								<h2> <%= data[i].nombreProducto %> </h2>
								<p><%= data[i].descripcionProducto %></p>
								<p>Comentarios: <%=data[i].comentario.length %> </p>
								<p>Cargado por: <a href="/users/id/<%= data[i].usuario.id%>"><%= data[i].usuario.mail%></a></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			<% } else { %>
				<p>No hay resultados para su búsqueda</p>
			<% } %>

	<!-- footer -->
	<%- include('./partials/footer') %>
	
</body>

</html>