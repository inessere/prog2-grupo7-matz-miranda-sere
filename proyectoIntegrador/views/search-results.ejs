<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> Resultados de busqueda
			</h2>
			<% for( let i = 0; i < 4; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/product">
							<figure class="product-box_image">
								<img src="<%= data.productos[i].fotoproducto %>" alt="<% %>" width="300" >
							</figure>
							<article class="product-box_data">
								<h2> <%= data.productos[i].nombreproducto %> </h2>
								<p><%= data.productos[i].descripcion %></p>
								<p> Comentarios: <%=data.productos[i].comentarios.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

	<!-- footer -->
	<%- include('./partials/footer') %>
	
</body>

</html>