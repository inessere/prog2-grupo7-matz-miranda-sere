<!-- Include Head -->

<body>
	<% if (locals.user !=undefined) { %>
		<%- include('./partials/headLogueado') %>
			<% } else { %>
				<%- include('./partials/head') %>
					<% } %>
						<!-- Datos del usuario -->
						<section class="info-usuario container products-wrapper">
							<div class="row">
								<div class="img-container offset-3 col-2">
									<img src="/images/users/<%= data.fotodeperfil %>" alt="foto de perfil"
										class="foto-perfil">
								</div>
								<div class="data-container col-6">
									<div class="d-flex align-items-center ">
										
										<% if (locals.user !=undefined) {%>
											<% if (locals.user.id==data.id) { %>
												<h1 class="main-title"><%= data.mail%>
													<a href="/users/profile-edit/id/<%= data.id %>"><i class="fas fa-cog"></i>
													</a>
												</h1>
												<% } %>
													<% } %>
										
										<a class="btn mt-3 ml-4" href="">SEGUIR</a>
									</div>
									<div>
										<ul class="">
											<!-- <p>Cantidad de productos: <a href="/products/id/<%=// product.id %>"><%=// product.nombreProducto %></a></p>-->
											<li>200 seguidores</li>
											<li>300 comentarios</li>
										</ul>
									</div>
								</div>
							</div>
						</section>
						<!-- /Datos del usuario -->

						<!-- Mis productos -->

						</div>
						<!-- Show mis productos -->

						<div class="container products-wrapper">
							<div class="row">
								<div class="col-12">
									<h2 class="products-title">Mis Productos:<%= data.productos.length %>
									</h2>
								</div>
								<!-- Show the "ultimos" products -->
								<% for( let i=0; i < data.productos.length; i++ ) { %>
									<div class="col-12 col-sm-6 col-lg-3">
										<section class="product-box">

											<a href="/products/id/<%=data.productos[i].id%>">
												<figure class="product-box_image">
													<img src="/images/products/<%= data.productos[i].fotoproducto %>"
														alt="<% %>" width="300">
												</figure>
												<article class="product-box_data">
													<h2>
														<%= data.productos[i].nombreProducto%>
													</h2>
													<p>
														<%= data.productos[i].descripcionProducto %>
													</p>
													<p> Comentarios: <%=data.productos[i].comentario.length %>
													</p>

												</article>
											</a>
										</section>
									</div>
									<% } %>


							</div>
						</div>
						<!-- /Novedades -->
						<!-- MÃ¡s comentados -->



						</div>
						</div>
						</div>
						<!-- /Mis productos -->


						<!-- footer -->
						<%- include('./partials/footer') %>

</body>

</html>